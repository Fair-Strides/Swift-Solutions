@* Search bar, with results *@
<div class="col-12 offset-md-2 mx-2">
    <div class="input-group text-swipe">
        <input type="text" class="form-control" id="search-event-input" placeholder="Search for..." aria-label="Search for..." aria-describedby="search-event-button">
        <button class="btn bg-orange text-light rounded-end" id="search-event-button" type="button">Search!</button>
    </div>
    <hr/>
    <div id="no-events-section" class="rounded-pill bg-orange text-light text-center py-2 hidden">
        <p class="notification">No events found</p>
    </div>
    <div id="searching-events-section" class="rounded-pill bg-orange text-light text-center py-2 hidden">
        <p class="notification">Searching...</p>
    </div>
</div>